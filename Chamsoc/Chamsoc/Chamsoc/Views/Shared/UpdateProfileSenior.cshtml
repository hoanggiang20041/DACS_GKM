    .profile-container {
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        margin-top: 2rem;
        transition: all 0.3s ease;
    }

    .profile-container:hover {
