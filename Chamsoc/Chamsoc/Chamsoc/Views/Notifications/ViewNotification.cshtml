@model Chamsoc.Models.NotificationViewModel

<div class="container my-5">
    <h2 class="text-center mb-4 text-primary">Chi Tiết Công Việc</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">Thông Tin Công Việc</h5>
                </div>
                <div class="card-body">
                    <h6 class="text-muted mb-3">Thông Tin Khách Hàng</h6>
                    <p><strong><i class="fas fa-user me-2"></i>Tên:</strong> @Model.Senior.Name</p>
                    <p><strong><i class="fas fa-birthday-cake me-2"></i>Tuổi:</strong> @Model.Senior.Age</p>
                    <p><strong><i class="fas fa-heartbeat me-2"></i>Tình trạng bệnh:</strong> @Model.Senior.CareNeeds</p>
                    <p><strong><i class="fas fa-info-circle me-2"></i>Trạng thái:</strong> @(Model.Senior.Status ? "Sẵn sàng" : "Đang bận")</p>

                    <h6 class="text-muted mt-4 mb-3">Thông Tin Công Việc</h6>
                    <p><strong><i class="fas fa-concierge-bell me-2"></i>Dịch vụ:</strong> @Model.Job.ServiceType</p>
                    <p><strong><i class="fas fa-clock me-2"></i>Thời gian bắt đầu:</strong> @Model.Job.StartTime.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong><i class="fas fa-money-bill-wave me-2"></i>Tổng bill:</strong> @Model.Job.TotalBill.ToString("N0", System.Globalization.CultureInfo.GetCultureInfo("vi-VN")) VNĐ</p>

                    <div class="text-center mt-4">
                        <form asp-action="ConfirmJob" method="post" style="display:inline;">
                            <input type="hidden" name="notificationId" value="@Model.Notification.Id" />
                            <button type="submit" class="btn btn-success me-2">
                                <i class="fas fa-check-circle me-2"></i>Xác Nhận
                            </button>
                        </form>
                        <form asp-action="RejectJob" method="post" style="display:inline;">
                            <input type="hidden" name="notificationId" value="@Model.Notification.Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-times-circle me-2"></i>Từ Chối
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>