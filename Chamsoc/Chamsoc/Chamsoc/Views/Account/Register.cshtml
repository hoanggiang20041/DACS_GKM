@{
    ViewData["Title"] = "Đăng Ký";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-plus-circle text-primary" style="font-size: 3rem;"></i>
                        <h2 class="fw-bold text-primary mt-2">Đăng Ký Tài Khoản</h2>
                    </div>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger d-flex align-items-center py-2" role="alert">
                            <i class="bi bi-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success d-flex align-items-center py-2" role="alert">
                            <i class="bi bi-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <form asp-action="Register" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title fw-semibold mb-3">
                                    <i class="bi bi-person-badge me-2"></i>Thông tin đăng nhập
                                </h6>
                                <div class="mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <input type="text" class="form-control" id="username" name="username" placeholder="Tên đăng nhập" required />
                                    </div>
                                    <div class="invalid-feedback">Vui lòng nhập tên đăng nhập.</div>
                                </div>
                                <div class="mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-envelope"></i>
                                        </span>
                                        <input type="email" class="form-control" id="email" name="email" placeholder="Email" required />
                                    </div>
                                    <div class="invalid-feedback">Vui lòng nhập email hợp lệ.</div>
                                </div>
                                <div class="mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        <input type="password" class="form-control" id="password" name="password" placeholder="Mật khẩu" required />
                                    </div>
                                    <div class="invalid-feedback">Vui lòng nhập mật khẩu.</div>
                                </div>
                            </div>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title fw-semibold mb-3">
                                    <i class="bi bi-person-vcard me-2"></i>Thông tin cá nhân
                                </h6>
                                <div class="mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-person-badge"></i>
                                        </span>
                                        <input type="text" class="form-control" id="name" name="name" placeholder="Họ và tên" required />
                                    </div>
                                    <div class="invalid-feedback">Vui lòng nhập họ và tên.</div>
                                </div>
                                <div class="mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-telephone"></i>
                                        </span>
                                        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Số điện thoại" required maxlength="10" pattern="\d{10}" />
                                    </div>
                                    <div class="invalid-feedback">Vui lòng nhập số điện thoại gồm đúng 10 chữ số.</div>
                                </div>
                            </div>
                        </div>

                        <div class="card bg-light mb-3">
                            <div class="card-body">
                                <h6 class="card-title fw-semibold mb-3">
                                    <i class="bi bi-gear me-2"></i>Vai trò và thông tin bổ sung
                                </h6>
                                <div class="mb-3">
                                    <div class="input-group">
                                        <span class="input-group-text bg-white">
                                            <i class="bi bi-person-badge"></i>
                                        </span>
                                        <select class="form-select" id="role" name="role" required onchange="toggleRoleFields()">
                                            <option value="">Chọn vai trò</option>
                                            <option value="Senior">Người cần chăm sóc (Senior)</option>
                                            <option value="Caregiver">Người chăm sóc (Caregiver)</option>
                                        </select>
                                    </div>
                                    <div class="invalid-feedback">Vui lòng chọn vai trò.</div>
                                </div>

                                <div id="commonFields">
                                    <div class="mb-3" id="ageField" style="display: none;">
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="bi bi-calendar"></i>
                                            </span>
                                            <input type="number" class="form-control" id="age" name="age" placeholder="Tuổi" min="1" />
                                        </div>
                                        <div class="invalid-feedback">Vui lòng nhập tuổi hợp lệ (lớn hơn 0).</div>
                                    </div>

                                    <div class="mb-3" id="careNeedsField" style="display: none;">
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="bi bi-heart-pulse"></i>
                                            </span>
                                            <input type="text" class="form-control" id="careNeeds" name="careNeeds" placeholder="Tình trạng bệnh" />
                                        </div>
                                        <div class="invalid-feedback">Vui lòng nhập tình trạng bệnh.</div>
                                    </div>

                                    <div class="mb-3" id="skillsField" style="display: none;">
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="bi bi-tools"></i>
                                            </span>
                                            <select class="form-select" id="skills" name="skills">
                                                <option value="">Chọn kỹ năng</option>
                                                <option value="Khám toàn diện">Khám toàn diện</option>
                                                <option value="Khám vật lý trị liệu">Khám vật lý trị liệu</option>
                                            </select>
                                        </div>
                                        <div class="invalid-feedback">Vui lòng chọn kỹ năng chăm sóc.</div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="bi bi-currency-dollar"></i>
                                            </span>
                                            <input type="text" class="form-control" id="priceDisplay" placeholder="Chi phí/Thù lao mong muốn (VNĐ)" required />
                                            <input type="hidden" id="priceHidden" name="price" />
                                        </div>
                                        <div class="invalid-feedback">Vui lòng nhập chi phí/thù lao (lớn hơn 500.000 VND).</div>
                                    </div>

                                    <div class="mb-3" id="statusField" style="display: none;">
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="bi bi-toggle-on"></i>
                                            </span>
                                            <select class="form-select" id="status" name="status">
                                                <option value="true">Hoạt động</option>
                                                <option value="false">Không hoạt động</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3" id="isAvailableField" style="display: none;">
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="bi bi-toggle-on"></i>
                                            </span>
                                            <select class="form-select" id="isAvailable" name="isAvailable">
                                                <option value="true">Sẵn sàng</option>
                                                <option value="false">Đang bận</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="mb-3" id="identityAndHealthDocsField" style="display: none;">
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="bi bi-file-earmark-text"></i>
                                            </span>
                                            <input type="file" class="form-control" id="identityAndHealthDocs" name="identityAndHealthDocs" accept=".pdf,.jpg,.jpeg,.png" multiple />
                                        </div>
                                        <small class="form-text text-muted">Tải lên nhiều file PDF, JPG, JPEG, hoặc PNG.</small>
                                        <div class="invalid-feedback">Chỉ chấp nhận file PDF, JPG, JPEG, hoặc PNG.</div>
                                    </div>

                                    <div class="mb-3" id="certificateField" style="display: none;">
                                        <div class="input-group">
                                            <span class="input-group-text bg-white">
                                                <i class="bi bi-award"></i>
                                            </span>
                                            <input type="file" class="form-control" id="certificate" name="certificate" accept=".pdf,.jpg,.jpeg,.png" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4 py-2 me-2">
                                <i class="bi bi-person-plus me-2"></i>Đăng Ký
                            </button>
                            <a asp-action="Login" class="btn btn-secondary px-4 py-2">
                                <i class="bi bi-x-circle me-2"></i>Hủy
                            </a>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted mb-0">Đã có tài khoản? 
                            <a href="@Url.Action("Login", "Account")" class="text-primary text-decoration-none">
                                <i class="bi bi-box-arrow-in-right me-1"></i>Đăng nhập
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

