@model IEnumerable<Chamsoc.Models.Notification>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Thông Báo Chưa Đọc</h2>
        @if (Model.Any())
        {
            <form asp-action="MarkAllAsRead" method="post" class="d-inline">
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-check-double me-2"></i>Đánh dấu tất cả đã đọc
                </button>
            </form>
        }
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var notification in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">
                                    <i class="fas fa-bell text-primary me-2"></i>Thông Báo Mới
                                </h5>
                                <span class="badge bg-primary">
                                    <i class="fas fa-clock me-1"></i>@notification.CreatedAt.ToString("HH:mm")
                                </span>
                            </div>
                            <p class="card-text text-muted mb-2">
                                <i class="fas fa-calendar-alt me-2"></i>@notification.CreatedAt.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text">@notification.Message</p>
                            <div class="text-end mt-3">
                                <a asp-action="ViewNotification" asp-route-id="@notification.Id" class="btn btn-primary">
                                    <i class="fas fa-eye me-2"></i>Xem Chi Tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-bell-slash text-muted" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3 mb-0">Bạn không có thông báo chưa đọc nào.</p>
        </div>
    }
</div>