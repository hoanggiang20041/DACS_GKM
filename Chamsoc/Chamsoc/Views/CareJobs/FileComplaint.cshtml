@model Chamsoc.Models.FileComplaintViewModel

@{
    ViewData["Title"] = "Gửi khiếu nại";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">Gửi khiếu nại về @Model.CaregiverName</h4>
                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body">
                                    <form asp-action="FileComplaint" method="post" enctype="multipart/form-data">
                                        <input type="hidden" asp-for="JobId" />
                                        <input type="hidden" asp-for="CaregiverId" />
                                        <input type="hidden" asp-for="SeniorId" />
                                        <input type="hidden" asp-for="CaregiverName" />

                                        <div class="mb-4">
                                            <label asp-for="Description" class="form-label">Nội dung khiếu nại</label>
                                            <textarea asp-for="Description" class="form-control" rows="5" 
                                                      placeholder="Vui lòng mô tả chi tiết vấn đề bạn gặp phải..." required></textarea>
                                            <span asp-validation-for="Description" class="text-danger"></span>
                                        </div>
                                        
                                        <div class="mb-4">
                                            <label asp-for="ImageFile" class="form-label">Hình ảnh đính kèm (nếu có)</label>
                                            <input type="file" asp-for="ImageFile" class="form-control" accept="image/*" />
                                            <small class="text-muted">Hỗ trợ các định dạng: JPG, PNG, GIF. Kích thước tối đa: 5MB</small>
                                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                                        </div>

                                        <div class="alert alert-info">
                                            <i class="fas fa-info-circle me-2"></i>
                                            <strong>Lưu ý:</strong> Vui lòng cung cấp thông tin chính xác và đầy đủ để chúng tôi có thể hỗ trợ bạn tốt nhất.
                                        </div>

                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-warning">
                                                <i class="fas fa-paper-plane me-2"></i>Gửi khiếu nại
                                            </button>
                                            <a asp-action="Details" asp-route-id="@Model.JobId" class="btn btn-secondary">
                                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                                            </a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 0.5rem;
    }
    .card-header {
        border-radius: 0.5rem 0.5rem 0 0 !important;
    }
    .form-label {
        font-weight: 500;
    }
    .alert {
        border-radius: 0.5rem;
    }
</style>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}